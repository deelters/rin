{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:vue/vue3-recommended", "airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".js", ".md"]
      }
    }
  },
  "plugins": ["vue", "@typescript-eslint"],
  "rules": {
    "no-undef": "off",
    "no-shadow": "off",
    "no-underscore-dangle": "off",
    "no-nested-ternary": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "md": "never"
      }
    ]
  }
}
